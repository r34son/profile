{
  "name": "profile",
  "version": "0.1.0",
  "sideEffects": [
    "*.css"
  ],
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": "20",
    "pnpm": "9.x"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "analyze": "ANALYZE=true next build --no-lint",
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "format:check": "prettier . --cache --check",
    "format:fix": "pnpm run format:check --write",
    "lint:check": "run-p --continue-on-error \"lint:*:check\"",
    "lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
    "lint:code:check": "eslint .",
    "lint:code:fix": "pnpm run lint:code:check --fix",
    "lint:styles:check": "stylelint \"**/*.css\" --cache --ignore-path .gitignore",
    "lint:styles:fix": "pnpm run lint:styles:check --fix",
    "preinstall": "npx only-allow pnpm",
    "setup": "is-ci || simple-git-hooks",
    "test:unit": "jest --passWithNoTests",
    "types:check": "tsc --noEmit",
    "validate": "run-p format:check lint:check types:check test:unit",
    "lhci:start": "NODE_ENV=production next build --no-lint && cp -r .next/static .next/standalone/.next/ && node .next/standalone/server.js",
    "lhci:mobile": "lhci autorun",
    "lhci:desktop": "lhci autorun --collect.settings.preset=desktop",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-zero-on-changes",
    "e2e:update": "docker compose  -f playwright-local/docker-compose.playwright.yml run --rm -it --build playwright pnpm exec playwright test --update-snapshots --trace on"
  },
  "dependencies": {
    "@opentelemetry/exporter-prometheus": "^0.52.1",
    "@opentelemetry/host-metrics": "^0.35.3",
    "@opentelemetry/instrumentation": "^0.52.1",
    "@opentelemetry/instrumentation-runtime-node": "^0.6.0",
    "@opentelemetry/resources": "^1.25.1",
    "@opentelemetry/sdk-metrics": "^1.25.1",
    "@opentelemetry/semantic-conventions": "^1.25.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-navigation-menu": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@sentry/nextjs": "8.19.0",
    "@sentry/opentelemetry": "8.19.0",
    "@sentry/profiling-node": "8.19.0",
    "@yandex/smart-captcha": "^2.6.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "embla-carousel-autoplay": "8.1.7",
    "embla-carousel-react": "8.1.7",
    "framer-motion": "^11.3.8",
    "lucide-react": "^0.412.0",
    "next": "15.0.0-canary.75",
    "next-compose-plugins": "^2.2.1",
    "next-intl": "^3.17.2",
    "next-themes": "^0.3.0",
    "react": "19.0.0-rc-fb9a90fa48-20240614",
    "react-dom": "19.0.0-rc-fb9a90fa48-20240614",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^0.9.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.6.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.7.0",
    "@lhci/cli": "^0.14.0",
    "@next/bundle-analyzer": "15.0.0-canary.75",
    "@playwright/test": "^1.45.2",
    "@storybook/addon-essentials": "^8.2.5",
    "@storybook/addon-interactions": "^8.2.5",
    "@storybook/addon-links": "^8.2.5",
    "@storybook/addon-themes": "^8.2.5",
    "@storybook/blocks": "^8.2.5",
    "@storybook/nextjs": "^8.2.5",
    "@storybook/react": "^8.2.5",
    "@storybook/test": "^8.2.5",
    "@testing-library/dom": "^10.3.2",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/eslint": "^8.56.10",
    "@types/is-ci": "^3.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "20.14.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "babel-plugin-react-compiler": "0.0.0-experimental-938cd9a-20240601",
    "chromatic": "^11.5.6",
    "cssnano": "^7.0.4",
    "eslint": "^9.7.0",
    "eslint-config-next": "15.0.0-canary.75",
    "eslint-plugin-storybook": "^0.8.0",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7",
    "npm-run-all2": "^6.2.2",
    "postcss": "^8.4.39",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "puppeteer": "^22.13.1",
    "simple-git-hooks": "^2.11.1",
    "storybook": "^8.2.5",
    "stylelint": "^16.7.0",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.3"
  },
  "pnpm": {
    "overrides": {
      "jsdom": "24.1.1"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "next": "15.0.0-canary.75",
        "react": "19.0.0-rc-fb9a90fa48-20240614",
        "react-dom": "19.0.0-rc-fb9a90fa48-20240614",
        "eslint": "9.7.0"
      }
    }
  },
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">=0.75%",
      "not dead",
      "not op_mini all"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ],
    "*.@(css)": [
      "stylelint --cache --fix",
      "prettier --cache --write"
    ],
    "*.!(css|js|ts|tsx)": "prettier --cache --ignore-unknown --write"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm exec commitlint --edit",
    "pre-commit": "pnpm exec lint-staged"
  },
  "puppeteer": {
    "skipDownload": true
  },
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 10,
    "minimumChangeThreshold": 0,
    "showDetails": true
  }
}
