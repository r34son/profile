{
  "name": "profile",
  "version": "0.1.0",
  "sideEffects": [
    "*.css"
  ],
  "packageManager": "pnpm@8.14.1",
  "engines": {
    "node": "20",
    "pnpm": "8.x"
  },
  "private": true,
  "scripts": {
    "analyze": "ANALYZE=\"true\" next build --no-lint",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format:check": "prettier . --cache --check",
    "format:fix": "pnpm run format:check --write",
    "lint:check": "run-p --continue-on-error \"lint:*:check\"",
    "lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
    "lint:code:check": "eslint . --cache --ignore-path .gitignore",
    "lint:code:fix": "pnpm run lint:code:check --fix",
    "lint:styles:check": "stylelint \"**/*.css\" --cache --ignore-path .gitignore",
    "lint:styles:fix": "pnpm run lint:styles:check --fix",
    "preinstall": "npx only-allow pnpm",
    "setup": "is-ci || simple-git-hooks",
    "test:unit": "jest --passWithNoTests",
    "types:check": "tsc --noEmit",
    "validate": "run-p format:check lint:check types:check test:unit",
    "lhci:start": "NODE_ENV=production next build --no-lint && cp -r .next/static .next/standalone/.next/ && node .next/standalone/server.js",
    "lhci:mobile": "lhci autorun",
    "lhci:desktop": "lhci autorun --collect.settings.preset=desktop",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-zero-on-changes"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@yandex/smart-captcha": "^2.5.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "devicon": "^2.15.1",
    "embla-carousel-autoplay": "8.0.0-rc19",
    "embla-carousel-react": "8.0.0-rc19",
    "lucide-react": "^0.309.0",
    "next": "14.0.4",
    "next-compose-plugins": "^2.2.1",
    "next-intl": "^3.4.2",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.2",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@lhci/cli": "^0.13.0",
    "@next/bundle-analyzer": "^14.0.4",
    "@playwright/test": "^1.40.1",
    "@storybook/addon-essentials": "^7.6.8",
    "@storybook/addon-interactions": "^7.6.8",
    "@storybook/addon-links": "^7.6.8",
    "@storybook/addon-themes": "^7.6.8",
    "@storybook/blocks": "^7.6.8",
    "@storybook/nextjs": "^7.6.8",
    "@storybook/react": "^7.6.8",
    "@storybook/test": "^7.6.10",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@types/is-ci": "^3.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "20.10.0",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "chromatic": "^10.2.2",
    "cssnano": "^6.0.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-storybook": "^0.6.15",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "npm-run-all2": "^6.1.1",
    "postcss": "^8.4.33",
    "prettier": "3.2.2",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "puppeteer": "^21.7.0",
    "simple-git-hooks": "^2.9.0",
    "storybook": "^7.6.8",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "pnpm": {
    "overrides": {
      "jsdom": "23.2.0"
    }
  },
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">=0.75%",
      "not dead",
      "not op_mini all"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "plugin:storybook/recommended",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ],
    "*.@(css)": [
      "stylelint --cache --fix",
      "prettier --cache --write"
    ],
    "*.!(css|js|ts|tsx)": "prettier --cache --ignore-unknown --write"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm exec commitlint --edit",
    "pre-commit": "pnpm exec lint-staged"
  }
}
