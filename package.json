{
  "name": "profile",
  "version": "0.1.0",
  "sideEffects": [
    "*.css"
  ],
  "packageManager": "pnpm@9.15.5",
  "engines": {
    "node": "22",
    "pnpm": "9.x"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "analyze": "ANALYZE=true next build --no-lint",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "format:check": "prettier . --cache --check",
    "format:fix": "pnpm run format:check --write",
    "lint:check": "run-p --continue-on-error \"lint:*:check\"",
    "lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
    "lint:code:check": "eslint .",
    "lint:code:fix": "pnpm run lint:code:check --fix",
    "lint:styles:check": "stylelint \"**/*.css\" --cache --ignore-path .gitignore",
    "lint:styles:fix": "pnpm run lint:styles:check --fix",
    "preinstall": "npx only-allow pnpm",
    "setup": "is-ci || simple-git-hooks",
    "test:unit": "jest --passWithNoTests",
    "types:check": "tsc --noEmit",
    "validate": "run-p format:check lint:check types:check test:unit",
    "lhci:start": "NODE_ENV=production next build --no-lint && cp -r .next/static .next/standalone/.next/ && node .next/standalone/server.js",
    "lhci:mobile": "lhci autorun",
    "lhci:desktop": "lhci autorun --collect.settings.preset=desktop",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-zero-on-changes",
    "e2e:update": "docker compose  -f playwright-local/docker-compose.playwright.yml run --rm -it --build playwright pnpm exec playwright test --update-snapshots --trace on"
  },
  "dependencies": {
    "@opentelemetry/exporter-prometheus": "^0.57.1",
    "@opentelemetry/host-metrics": "^0.35.5",
    "@opentelemetry/instrumentation": "^0.56.0",
    "@opentelemetry/instrumentation-runtime-node": "^0.12.1",
    "@opentelemetry/resources": "^1.30.1",
    "@opentelemetry/sdk-metrics": "^1.30.1",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "@radix-ui/react-dropdown-menu": "^2.1.5",
    "@radix-ui/react-navigation-menu": "^1.2.4",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.7",
    "@sentry/nextjs": "8.53.0",
    "@sentry/opentelemetry": "8.53.0",
    "@sentry/profiling-node": "9.2.0",
    "@yandex/smart-captcha": "^2.6.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-autoplay": "8.5.2",
    "embla-carousel-react": "8.5.2",
    "framer-motion": "^12.0.6",
    "lucide-react": "^0.474.0",
    "next": "15.1.6",
    "next-compose-plugins": "^2.2.1",
    "next-csp": "workspace:^",
    "next-intl": "^4.0.0-beta-40d535a",
    "next-themes": "^0.4.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/compat": "^1.2.6",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@lhci/cli": "^0.14.0",
    "@next/bundle-analyzer": "15.1.6",
    "@playwright/test": "^1.50.1",
    "@storybook/addon-essentials": "^8.5.3",
    "@storybook/addon-interactions": "^8.5.3",
    "@storybook/addon-links": "^8.5.3",
    "@storybook/addon-themes": "^8.5.3",
    "@storybook/blocks": "^8.5.3",
    "@storybook/nextjs": "^8.5.3",
    "@storybook/react": "^8.5.3",
    "@storybook/test": "^8.5.3",
    "@tailwindcss/postcss": "^4.0.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/is-ci": "^3.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "22.13.0",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "babel-plugin-react-compiler": "^19.0.0-beta-27714ef-20250124",
    "chromatic": "^11.25.2",
    "cssnano": "^7.0.6",
    "eslint": "^9.19.0",
    "eslint-config-next": "15.1.6",
    "eslint-plugin-storybook": "^0.11.2",
    "is-ci": "^4.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.5.1",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "puppeteer": "^24.1.1",
    "simple-git-hooks": "^2.11.1",
    "storybook": "^8.5.3",
    "stylelint": "^16.14.1",
    "stylelint-config-standard": "^37.0.0",
    "tailwindcss": "^4.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependenciesMeta": {
    "next-csp": {
      "injected": true
    }
  },
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">=0.75%",
      "not dead",
      "not op_mini all"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "plugin",
            "custom-variant",
            "theme",
            "utility",
            "layer",
            "apply"
          ]
        }
      ],
      "at-rule-no-deprecated": [
        true,
        {
          "ignoreAtRules": [
            "apply"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ],
    "*.@(css)": [
      "stylelint --cache --fix",
      "prettier --cache --write"
    ],
    "*.!(css|js|ts|tsx)": "prettier --cache --ignore-unknown --write"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm exec commitlint --edit",
    "pre-commit": "pnpm exec lint-staged"
  },
  "puppeteer": {
    "skipDownload": true
  },
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 10,
    "minimumChangeThreshold": 0,
    "showDetails": true
  }
}
